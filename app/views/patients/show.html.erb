<h1>PATIENT DETAILS</h1>
<p><%= @patient.name %></p>
<p><%= @patient.mobile %></p>
<p><%= @patient.date %></p>

<h2>Appointment Date</h2>
<% @patient.appointments.each do |appoint| %>
  <p>
    <strong>date:</strong>
    <%= appoint.date %>
  </p>
  <p>
    <strong>doctor_id :</strong>
    <%= appoint.doctor_id %>
  </p>
  <p>
    <strong>patient_id :</strong>
    <%= appoint.patient_id %>
  </p>
  <% end %>

<h2>Add your appointment:</h2>
<%= form_with model: [ @patient, @patient.appointments.build] do |form| %>
  <p>
    <%= form.label :date %><br>
    <%= form.text_field :date %>
  </p>
  <p>
    <%= form.label :Doctor_list%><br>
    <%= form.select("doctor_id", Doctor.all.collect {|p| [ p.name, p.id ] }, {include_blank: 'None'}) %>
  </p>
  <p>
    <%= form.label :patient_id %><br>
    <%= form.text_field :patient_id%>
  </p>
  
  <p>
    <%= form.submit %>
  </p>
<% end %>

<%= link_to "Back to Home", root_path %>
